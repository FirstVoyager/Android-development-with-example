<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Basic.PositionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/margin_card_medium"
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/radius_card_medium"
            app:cardElevation="@dimen/elevation_card_medium"
            android:layout_marginStart="@dimen/margin_card_medium"
            android:layout_marginEnd="@dimen/margin_card_medium"
            android:layout_marginBottom="@dimen/margin_card_medium"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="@dimen/padding_card_inner_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    android:text="@string/text_type_game_rotation_vector"
                    android:lines="1"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:padding="@dimen/padding_card_inner_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    tools:text="x, y, z"
                    android:id="@+id/textView_gameRotation"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/radius_card_medium"
            app:cardElevation="@dimen/elevation_card_medium"
            android:layout_marginStart="@dimen/margin_card_medium"
            android:layout_marginEnd="@dimen/margin_card_medium"
            android:layout_marginBottom="@dimen/margin_card_medium"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="@dimen/padding_card_inner_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    android:text="@string/text_type_geomagnetic_rotation_vector"
                    android:lines="1"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:padding="@dimen/padding_card_inner_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    tools:text="x, y, z"
                    android:id="@+id/textView_geomagneticRotation"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/radius_card_medium"
            app:cardElevation="@dimen/elevation_card_medium"
            android:layout_marginStart="@dimen/margin_card_medium"
            android:layout_marginEnd="@dimen/margin_card_medium"
            android:layout_marginBottom="@dimen/margin_card_medium"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="@dimen/padding_card_inner_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    android:text="@string/text_type_magnetic_field"
                    android:lines="1"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:padding="@dimen/padding_card_inner_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    tools:text="x, y, z"
                    android:id="@+id/textView_magneticField"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/radius_card_medium"
            app:cardElevation="@dimen/elevation_card_medium"
            android:layout_marginStart="@dimen/margin_card_medium"
            android:layout_marginEnd="@dimen/margin_card_medium"
            android:layout_marginBottom="@dimen/margin_card_medium"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="@dimen/padding_card_inner_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    android:text="@string/text_type_magnetic_field_uncalibrated"
                    android:lines="1"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:padding="@dimen/padding_card_inner_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    tools:text="x, y, z"
                    android:id="@+id/textView_magneticFieldUncalibrated"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/radius_card_medium"
            app:cardElevation="@dimen/elevation_card_medium"
            android:layout_marginStart="@dimen/margin_card_medium"
            android:layout_marginEnd="@dimen/margin_card_medium"
            android:layout_marginBottom="@dimen/margin_card_medium"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="@dimen/padding_card_inner_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    android:text="@string/text_type_orientation"
                    android:lines="1"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:padding="@dimen/padding_card_inner_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    tools:text="x, y, z"
                    android:id="@+id/textView_orientation"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/radius_card_medium"
            app:cardElevation="@dimen/elevation_card_medium"
            android:layout_marginStart="@dimen/margin_card_medium"
            android:layout_marginEnd="@dimen/margin_card_medium"
            android:layout_marginBottom="@dimen/margin_card_medium"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="@dimen/padding_card_inner_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    android:text="@string/text_type_proximity"
                    android:lines="1"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:padding="@dimen/padding_card_inner_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    tools:text="x, y, z"
                    android:id="@+id/textView_proximity"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>