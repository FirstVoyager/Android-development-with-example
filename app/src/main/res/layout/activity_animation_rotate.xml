<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CodeMore.Animation.AnimationRotateActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView_animation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:src="@drawable/image_test_10"
        android:scaleType="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90'"
            android:layout_margin="8dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/button_90"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="180'"
            android:layout_margin="8dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/button_180"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="360'"
            android:layout_margin="8dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/button_360"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-180'"
            android:layout_margin="8dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/button_180b"/>

    </LinearLayout>

</LinearLayout>