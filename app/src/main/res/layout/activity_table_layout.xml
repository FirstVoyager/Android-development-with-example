<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UserInterface.TableLayoutActivity">

    <TableRow
        android:weightSum="3"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/color_white"
            android:padding="8dp"
            android:background="#599442"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/color_white"
            android:padding="8dp"
            android:background="#0D47A1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/color_white"
            android:padding="8dp"
            android:background="#F78D8D"/>

    </TableRow>

    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="@color/color_white"
        android:layout_width="match_parent"
        android:text="4"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:weightSum="1"
        android:layout_weight="2"
        android:padding="8dp"
        android:background="#BF360C"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="@color/color_white"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:text="5"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:padding="8dp"
        android:background="#73B2DB"/>

    <TableRow
        android:weightSum="4"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/color_white"
            android:padding="8dp"
            android:background="#599442"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/color_white"
            android:padding="8dp"
            android:background="#0D47A1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/color_white"
            android:padding="8dp"
            android:background="#F78D8D"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/color_white"
            android:padding="8dp"
            android:background="#E94343"/>

    </TableRow>

    <TableRow
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/color_white"
            android:layout_weight="1"
            android:text="10"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TextAppearance.AppCompat.Title"
            android:padding="8dp"
            android:background="#6DCAB0"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/color_white"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="11"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Title"
            android:padding="8dp"
            android:background="#E63DEE"/>

    </TableRow>

</TableLayout>